###> symfony/framework-bundle ###
APP_ENV=prod
# CRITICAL: Generate strong random secret with: php -r "echo bin2hex(random_bytes(32)) . PHP_EOL;"
APP_SECRET=CHANGE-THIS-TO-STRONG-RANDOM-SECRET-IN-PRODUCTION
APP_DEBUG=0
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
DATABASE_URL="postgresql://roomctrl_user:CHANGE-THIS-PASSWORD@roomctrl-postgres:5432/roomctrl_prod?serverVersion=17&charset=utf8"
POSTGRES_DB=roomctrl_prod
POSTGRES_USER=roomctrl_user
POSTGRES_PASSWORD=CHANGE-THIS-STRONG-PASSWORD
###< doctrine/doctrine-bundle ###

###> symfony/mailer ###
MAILER_DSN=smtp://your-smtp-server:587?encryption=tls&auth_mode=login&username=your-email@example.com&password=your-password
MAIL_FROM_ADDRESS=noreply@your-domain.com
###< symfony/mailer ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=CHANGE-THIS-STRONG-JWT-PASSPHRASE
JWT_TOKEN_TTL=3600
###< lexik/jwt-authentication-bundle ###

###> nelmio/cors-bundle ###
CORS_ALLOW_ORIGIN='^https?://(your-domain\.com|www\.your-domain\.com)$'
###< nelmio/cors-bundle ###

###> Redis ###
REDIS_URL=redis://roomctrl-redis:6379
REDIS_PASSWORD=CHANGE-THIS-REDIS-PASSWORD
###< Redis ###

###> Backup Configuration ###
BACKUP_KEEP_DAYS=7
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=6
###< Backup Configuration ###
